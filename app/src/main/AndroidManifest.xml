<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.music">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicApplication">
        <activity android:name=".views.LoginActivity"></activity>
        <!-- Trang chính -->
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Trang đăng ký -->
        <activity
            android:name=".views.RegisterControlActivity"
            android:screenOrientation="portrait" /> <!-- Trang tạo tài khoản -->
        <activity
            android:name=".views.RegisterActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>