<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.music">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicApplication">

        <!-- Trang chính -->
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Trang đăng ký -->
        <activity
            android:name=".views.RegisterMainActivity"
            android:screenOrientation="portrait" />

        <!-- Trang đăng ký - Bước 1 -->
        <activity
            android:name=".views.RegisterFirstStepActivity"
            android:screenOrientation="portrait" />

        <!-- Trang đăng ký - Bước 2 -->
        <activity
            android:name=".views.RegisterSecondStepActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>