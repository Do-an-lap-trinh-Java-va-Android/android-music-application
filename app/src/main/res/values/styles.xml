<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Background Splash Screen -->
    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Base -->
    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Font chữ mặc định -->
        <item name="android:fontFamily">@font/roboto</item>

        <!-- Kích thước chữ mặc định -->
        <item name="android:textSize">@dimen/font_size_medium</item>

        <!-- Chỉnh màu status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Chỉnh màu cursor và màu bôi đen -->
        <item name="colorAccent">@color/purple_400</item>
        <item name="android:textColorHighlight">@color/purple_400</item>

        <!-- Chỉnh màu chữ ToolBar -->
        <item name="toolbarStyle">@style/Theme.CustomToolbar</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="subtitleTextColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Bo tròn hình ảnh -->
    <style name="Theme.Rounded.ShapeableImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_small</item>
    </style>

    <!-- Tùy chỉnh màu cho ToolBar -->
    <style name="Theme.CustomToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">?attr/colorOnPrimary</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <!-- Color of the Toolbar -->
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>